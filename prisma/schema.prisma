generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int        @id @default(autoincrement())
  name        String     @unique
  password    String
  householdId Int?
  household   Household? @relation(fields: [householdId], references: [id])
}

model Household {
  id      Int       @id @default(autoincrement())
  name    String
  members User[]
  Grocery Grocery[]
}

model Grocery {
  id          Int        @id @default(autoincrement())
  name        String
  quantity    Int
  bought      Boolean
  householdId Int?
  household   Household? @relation(fields: [householdId], references: [id])
}
